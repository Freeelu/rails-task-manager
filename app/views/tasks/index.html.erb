<H1>My tasks</H1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task)%> <%= link_to "edit", edit_path(task) %>
    <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>



  <% end %>
</ul>
<%= link_to "Add new task", new_path %>
